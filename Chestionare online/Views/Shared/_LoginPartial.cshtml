@using Microsoft.AspNetCore.Identity
@using Chestionare_online.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav w-100 d-flex justify-content-between align-items-center" style="min-height: 70px;">
    <li class="nav-item flex-grow-1 text-center">
        <span class="nav-link text-dark p-0 fs-5">Bine ați venit la examenul auto!</span>
    </li>

    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item d-flex align-items-center">
            <div class="d-flex align-items-center gap-3">
                <a id="manage" class="nav-link text-dark p-0 pe-2"
                   asp-area="Identity"
                   asp-page="/Account/Manage/Index"
                   title="Manage">
                    Hello @UserManager.GetUserName(User)!
                </a>
                <span class="text-secondary">|</span>
                <form id="logoutForm"
                      class="form-inline m-0 ps-2"
                      asp-area="Identity"
                      asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout"
                            type="submit"
                            class="btn btn-link text-dark p-0">
                        Logout
                    </button>
                </form>
            </div>
        </li>
    }
</ul>